/* Modal Content */
.modal-content {
  position: relative;
  background-color: #fefefe;
  margin: auto;
  padding: 0;
  border: 1px solid #888;
  width:600px;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19);
  -webkit-animation-name: animatetop;
  -webkit-animation-duration: 0.4s;
  animation-name: animatetop;
  animation-duration: 0.4s
}

/* Add Animation */
@-webkit-keyframes animatetop {
  from {top:-300px; opacity:0} 
  to {top:0; opacity:1}
}

@keyframes animatetop {
  from {top:-300px; opacity:0}
  to {top:0; opacity:1}
}

/* The Close Button */
#btnClose,#btnClose3 {
  color: #333;
  font-size: 28px;
  font-weight: bold;
  position:absolute;
  right:0;
  padding:0 20px;
}

#btnClose:hover,
#btnClose:focus {
  color: #000;
  text-decoration: none;
  cursor: pointer;
}
#btnClose3:hover,
#btnClose3:focus {
  color: #000;
  text-decoration: none;
  cursor: pointer;
}

.modal-header {
  padding: 10px 16px;
  position: relative;
}
.modal-header h2{
  font-size: 28px;
  color: rgb(3, 18, 26);
}

.modal-body {
  padding: 20px 16px;}

.modal-footer {
  padding: 2px 16px;
  background-color: #5cb85c;
  color: white;
}
.list-info{
  padding: 10px 20px;
}
.list-info .info-item{
  color: rgb(3, 18, 26);
  font-weight:600;
}
.booking-action{
  padding: 20px 20px;
  display:flex;
  justify-content:center;
}
.btn-booking{
  margin-left: 10px;
}
.btn-close-change, .btn-booking{
  width:46%
}

