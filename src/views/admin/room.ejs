<h4>Danh sách phòng</h4>
<a role="button" style="background-color: blueviolet;" class="btn mt-3 btn-primary"href="/admin/room/create"> Thêm phòng</a>
<div class="container">
  <div class="row mt-3">
    <!-- <a href="javascript:window.print()">print this page</a> -->
    <table id="table_id" class="display" class="table table-sm">
      <thead>
        <tr>
         <th scope="col">STT</th>
          <th scope="col">Mã phòng</th>
          <th scope="col">Loại phòng</th>
          <th scope="col">Tầng</th>
          <th scope="col">Trạng thái</th>
          <th class="befn aftn"></th>
        </tr>
      </thead>
      <tbody id="renderData">
           <% for(var i=0; i<data.length; i++) {%>
          <tr style="font-size:14px">
            <td ><%= i+1 %></td>
            <td ><%= data[i].roomID %></td>
            <td><%= data[i].roomData.nameType %></td>
            <td><%= data[i].floor %></td>
            <td style="text-align:center;"><%= data[i].status %></td>
            <td>
                <a  href="/admin/room-edit/<%= data[i].roomID %>">Chỉnh sửa</a></li>
            </td>
            
            <!-- <td><a class="btn btn-detail" role="button" href="">Chi tiết</a></td>
            <td><a class="btn btn-update" role="button" href="">Cập nhật</a></td>
            <td><a class="btn btn-payment btn-primary" role="button" href="">Thanh toán</a></td> -->
          
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

