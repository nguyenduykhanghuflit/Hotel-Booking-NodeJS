<h4>Thêm phòng</h4>
<div class="row">
  <div style="margin: 0 auto" class="col-md-8 col-sm-8">
    <form method="post" name="formCreate" action="/admin/room/create" class="row g-3">
      <div class="col-md-12">
        <label for="typeID" class="form-label">Loại phòng</label>
        <select name="typeID" id="typeID" class="form-select">
            <% for(var i=0; i<data.length; i++) {%>
                <option value="<%= data[i].typeID %>"><%= data[i].nameType %></option>
         <%}%>
         
        </select>
      </div>
      <div class="col-md-6">
        <label for="amount" class="form-label">Số lượng</label>
        <input
          type="number"
          required
          min="1"
          max="20"
          class="form-control"
          name="amount"
        />
      </div>
      <div class="col-md-6">
        <label for="floor" class="form-label">Tầng</label>
        <input
          type="number"
          required
          min="1"
          max="20"
          class="form-control"
          name="floor"
        />
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Thêm phòng</button>
      </div>
    </form>
  </div>
</div>

