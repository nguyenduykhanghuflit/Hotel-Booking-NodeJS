<!-- thiết lập front end -->
<script>
  let listText = document.querySelectorAll(
    '.navbar-vertical .navbar-nav>.nav-item .nav-link'
  );
  listText.forEach((item) => {
    if (
      item.classList.contains('active') &&
      item.classList.contains('bg-gradient-primary')
    )
      item.classList.remove('active');
    item.classList.remove('bg-gradient-primary');
  });
  document.querySelector('.nav-room-m').classList.add('active');
  document.querySelector('.nav-room-m').classList.add('bg-gradient-primary');

  document.querySelector(
    '.breadcrumb-item.text-sm.text-dark.active'
  ).textContent = 'Thêm phòng';
  document.querySelector('.breadcrumb-item a').textContent = 'Phòng';
  document
    .querySelector('.breadcrumb-item a')
    .setAttribute('href', '/admin/room');
</script>
